#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n, count = 1;
    cin >> n;
    for (int i = 0; i<=n; i++)
    {
        for (int j = n; j > i; j--)
        {
            cout << " ";
            // count++;
        }
        for (int j = 0; j < i; j++)
        {
            cout << count<<" ";
